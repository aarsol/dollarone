<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-extend="PosTicket">
    <t t-jquery="div[class*='pos-sale-ticket']" t-operation="replace">
    
    <div class="pos-sale-ticket">                   
        <t t-if="!hideheading">
            <div class="company_card">                
                <div class="company_info">
                    <span  class="company_name"><t t-esc="widget.pos.company.name"/></span><br />
					<t t-esc="widget.pos.company.street"/>, <t t-esc="widget.pos.company.city"/>, <t t-esc="widget.pos.company.country.name"/><br />
					<strong>Phone:</strong> <t t-esc="widget.pos.company.phone || ''"/><br />
					<strong>Website:</strong> <t t-esc="widget.pos.company.website || ''"/><br />
					<strong>Terminal:</strong> <t t-esc="widget.pos.config.name || ''"/><br />					
					<!--VAT: <t t-esc="widget.pos.company.vat || ''"/><br /> -->
					<strong>Served By:</strong> <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/>    
                </div>
                <div class="company_logo">
                    <img src='/web/binary/company_logo' style="width:100%"/>
                </div>                
            </div>
            
            <div name="order_info">
		        Date: <t t-esc="moment().format('L LT')"/> <br />                   
		        Receipt: <t t-esc="order.name"/><br />       	            
		        <t t-set="client" t-value="order.get_client()"/>
				<t t-if="client and widget.pos.config.receipt_customer_vat">
					<t t-set="client" t-value="order.get_client()"/>
					Customer: <t t-esc="client['name']"/><br />
					Phone (mobile): <t t-esc="client['phone'] || client['mobile'] || ''"/>						
				</t> 
				
				<br />
               
				<t t-if="widget.pos.config.booking_orders_display_shipping_receipt">
				    <t t-if="order.delivery_address">
				        <div>Shipping information:</div>
				        Address: <t t-esc="order.delivery_address"/><br />
				    </t>
				    <t t-if="order.delivery_date">
				        Date: <t t-esc="order.delivery_date"/><br />
				    </t>
				    <t t-if="order.delivery_phone">
				        Phone: <t t-esc="order.delivery_phone"/><br />
				    </t>
				</t>
				<t t-if="widget.pos.config.display_fiscal_position_receipt and order.fiscal_position">
				    <div>Fiscal Position: <t t-esc="order.fiscal_position.name"/><br /></div>
				</t>
				<t t-if="order.invoice_number and widget.pos.config.receipt_invoice_number">
				    <div>Invoice number: <t t-esc="order.invoice_number"/><br /></div>

				</t>      	
			</div>
		    
        
               
		    <t t-if="receipt.header">
		        <div style='text-align:center'>
		            <t t-esc="receipt.header" />
		        </div>            
		    </t>
        </t>  <!-- !hideheading -->
        

<!-- Category wise -->        
<t t-if="widget.pos.config.category_wise_receipt">
    <t t-set='index' t-value="1"/>
    <table class='receipt-orderlines'>
        <tr>
			<th class="pos-left-align" width='70%' style="border-bottom: dotted 1px #000">ITEMS</th>
			<th class="pos-right-align" width='13%' style="border-bottom: dotted 1px #000">QTY</th>
			<th class="pos-right-align" width='17%' style="border-bottom: dotted 1px #000">AMOUNT</th>
		</tr>  			
		<!--
		<tr>
			<td class="pos-left-align" style="border-bottom: dotted 1px #000">المادة</td>
			<td class="pos-right-align" style="border-bottom: dotted 1px #000">الكمية</td>
			<td class="pos-right-align" style="border-bottom: dotted 1px #000">السعر</td>
		</tr>
		<t t-esc="index"/>
		-->
		<!--<br /> -->
    
		<t t-foreach="orderlines_by_category_name" t-as="category">
		        <t t-set='orderlines' t-value="orderlines_by_category_name[category]" />
		        
		        <tr>                    
		            <td colspan="3">
		            	<span class="pos_underline">
		            		Category: <t t-esc="category"/> 
		            		<t t-if="orderlines.length == 1"> (1) item </t>
		                	<t t-if="orderlines.length > 1"> (<t t-esc='orderlines.length' />) items </t>
		                </span>
		            </td>                    
		        </tr>
		    
		    	<t t-set='index' t-value="index + 1"/>                
		        <t t-set="csum" t-value="0"></t>
		        
		        <tr t-foreach="orderlines" t-as="orderline">
		            <td style="border-bottom: dotted 1px #000;padding-top:3px;">
		                
		                <t t-if="widget.pos.config.display_image_receipt">
		                    <img class='orderline_image' t-att-src="orderline.get_line_image()"/>
		                </t>
		                
		                <div style="margin-left: 30px; margin-top: -20px; line-height: 1.1em;">
						    <t t-if="orderline.get_product().variant_categ">
						        <t t-if="orderline.get_variant_product().length == 1">
						            <t t-esc="orderline.get_variant_product()[0] and orderline.get_variant_product()[0].name or ''"/> -  <t t-esc="orderline.get_product().display_name"/>   
						        </t>
						        <t t-if="orderline.get_variant_product().length > 1">
						            <t t-esc="orderline.get_product().display_name"/> with Selections		                    
						        </t>
						    </t>
						    <t t-if="!orderline.get_product().variant_categ">
						        <t t-esc="orderline.get_product().display_name"/>   
						    </t>					    
						</div>
		              
		               		                
		                <div t-if="orderline.get_product().color == 100">                        
				            <t t-esc="orderline.discount_reason" />                     
				        </div>
                 
		                <div t-if="!orderline.get_discount() > 0 and orderline.get_product().color != 100">                                
		                    Price : <t t-esc='orderline.price' />
		                    <!--<t t-esc='orderline.price - orderline.get_tax()' /> -->
		                </div>
		                
		                <div t-if="orderline.get_discount() > 0 and orderline.get_product().color != 100">                                
		                    Price : <span style="text-decoration: line-through;">
		                    <!-- <t t-esc='orderline.price - orderline.get_tax()' /> -->
		                    <t t-esc='orderline.price' /></span> 
		                    <!--<t t-esc='orderline.price - orderline.get_tax() - orderline.get_item_discout()'/> -->                   	   						<t t-esc='orderline.price - orderline.get_item_discout()'/>
		                    <div class="pos-disc-font">
		                        With a <t t-esc="orderline.get_discount()"/>% discount
		                    </div>
		                </div>
		                
		                 <!-- tax -->                            
		                <!--
		                <div t-if="widget.pos.config.display_tax_receipt and orderline.get_tax() > 0">                                
		                    Tax: <t t-esc="widget.format_currency(orderline.get_tax())"/>
		                </div>
		                -->
		                
		                <!-- Prop notes -->
						<t t-if="orderline.prop_options">
							<ul class="bus-info" style="font-size:10px; line-height:14px;">
								<t t-foreach="orderline.prop_options" t-as="option">															        
									<li class="info">
										<i class="fa fa-caret-right"/>
										<b><t t-esc="option.note_name" /></b> : 	<t t-esc="option.option_name" />									
									</li>								
								</t>
							</ul>			
						</t>
						
		                <!-- Category Variants -->
						<t t-if="orderline.get_product().variant_categ and orderline.quantity > 1">
							<ul class="bus-info" style="font-size:10px; line-height:14px;">
								<t t-foreach="orderline.get_variant_product()" t-as="item">															        
									<li class="info">
										<i class="fa fa-caret-down"/>
										<t t-esc="item.name" /> with Qty: <t t-esc="item.quantity" />											
									</li>								
								</t>
							</ul>			
						</t>
				    
		                <!-- serial number of lot -->
		                <div t-if="orderline.pack_lot_lines and orderline.pack_lot_lines.models">                                
		                    <t t-foreach="orderline.pack_lot_lines.models" t-as="lot_model">
		                        <t t-if="lot_model">
		                            <div class="pos-disc-font">
		                                Lot/Serial: <t t-esc="lot_model['attributes']['lot_name']"/>
		                            </div>
		                        </t>
		                    </t>
		                </div>
		                		                
				                
		                <!-- combo items -->
						<t t-if="orderline.combo_items">
							<t t-foreach="orderline.combo_items" t-as="combo_item">
							    <ul class="bus-info ticket">
							        <li class="info">			                    
							            <t t-if="combo_item.variant_categ">
				                            <t t-if="combo_item.variant_products.length == 1">
				                                <i class="fa fa-caret-right"/>
				                                <t t-esc="combo_item.variant_products[0] and combo_item.variant_products[0].name or ''"/> -  <t t-esc="combo_item.product_id[1]"/>
				                                with qty : <t t-esc="combo_item.quantity" />   
				                            </t>
				                            <t t-if="combo_item.variant_products.length > 1">
				                                <i class="fa fa-caret-down"/>
				                                <t t-esc="combo_item.product_id[1]"/> with Selections, qty : <t t-esc="combo_item.quantity" />
				                                <t t-foreach="combo_item.variant_products" t-as="item">
													<ul class="bus-info">					            
														<li class="info">
															<i class="fa fa-caret-right"/>
															<t t-esc="item.name" /> with qty: 	<t t-esc="item.quantity" />											
														</li>
													</ul>
												</t>			 		                    
				                            </t>
				                        </t>
				                        
				                        <t t-if="!combo_item.variant_categ">
				                            <i class="fa fa-caret-right"/>
				                            <t t-esc="combo_item.product_id[1]"/> with qty : <t t-esc="combo_item.quantity" />    
				                        </t>
				                        
							            <t t-if="combo_item.lot_number">
							                ,Lot/Serial Number : <t t-esc="combo_item.lot_number" />
							            </t>
							            <t t-if="combo_item.use_date">
							                Expired date of lot: <t t-esc="combo_item.use_date" />
							            </t>
							        </li>
							        <t t-if="combo_item.note">
							            <ul class="bus-info ticket sub">
									        <li class="info">					                    
									            <t t-esc="combo_item.note" />
									        </li>
									    </ul>
							        </t>
							        <t t-if="combo_item.variants">
							            <t t-foreach="combo_item.variants" t-as="variant">
											<ul class="bus-info ticket sub">
												<li class="info">											
													<t t-esc="variant.value_id[1]" />												
												</li>
											</ul>
										</t>
							        </t>
							    </ul>
							</t>
						</t>               
		                 <!-- multi variant -->
		                <div t-if="orderline.variants">
		                    <t t-foreach="orderline.variants" t-as="variant">
		                        <div class="pos-disc-font">
		                            <left>
		                                <t t-esc="variant.value_id[1]"/>
		                                <t t-esc="widget.format_currency(variant.price_extra, 'Price extra')" />
		                            </left>
		                        </div>
		                    </t>
		                </div>
		                <!-- tags -->
		                <div t-if="orderline.tags">                               
		                    <t t-foreach="orderline.tags" t-as="tag">
		                        <div class="pos-disc-font">
		                            <left>
		                                <span class='bus-info' t-att-data-id="tag.id">
		                                    <i class="fa fa-tag">
		                                        <t t-esc="tag.name"/>
		                                    </i>
		                                </span>
		                            </left>
		                        </div>
		                    </t>
		                </div>
		                <!-- notes -->
		                <div t-if="orderline.note">                                                               
			                <div class="pos-disc-font">
			                    <i class="fa fa-tag">
			                   		<t t-esc="orderline.note"/>	
			                    </i>			                               
			                </div>                                
		                </div>
		            </td>  <!-- Item Column -->
		            
		            
		            <td class="pos-right-align" style="border-bottom: dotted 1px #000">
		                <t t-esc="orderline.get_quantity_str_with_unit()"/>
		            </td>
		            <td class="pos-right-align" style="border-bottom: dotted 1px #000">                        
		                <t t-esc="widget.format_currency_no_symbol(orderline.get_display_price())"/>
		                <!--
		                <span style="padding: 0;float: right; font-size: 11px;color: goldenrod">
							<t t-if="orderline.get_tax()">
								Tax:<t t-esc="widget.format_currency(orderline.get_tax())"/>
							</t>
						</span>
						-->
		            </td>
		            <t t-set="csum" t-value="csum + orderline.get_display_price()"/>
		        </tr>  <!-- Order Line -->
		        
		        <!-- Category subtotal -->
				<tr class="empch">
					<td style="border-bottom: dotted 1px #000">Subtotal: <t t-esc="category"/></td>
				    <td colspan="2" class="pos-right-align pos_underline">
				       <t t-esc="widget.format_currency(csum)"/>
				    </td>
				</tr>
				
		    
		</t> <!-- category -->
		
		
		        
		        
    </table>
</t>

