<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="pos_product_prop_form" model="ir.ui.view">
            <field name="name">pos.product.prop.form</field>
            <field name="model">pos.product.prop</field>
            <field name="arch" type="xml">
                <form string="Prop Note">
                    <sheet>
                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="name"/>                               
                            </group>
                            <group>                                
                                <field name="multi_selection"/>
                                <field name="default_line"/>                                 
                            </group>
                            <group>                                
                                <field name="price_cost_include"/>
                                <field name="price"/>                                 
                            </group>
                            
                        </group>
                       
                        <field name="prop_line">
                        	<tree string="Options" editable="top">
						        <field name="name"/>
						        <field name="description"/>
						        <field name="price"/>
						        <field name="rm_product_tmpl_id"/>
						        <field name="standard_price"/>
						    </tree>
                        
                        </field>
                      
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="pos_product_prop_line_form" model="ir.ui.view">
            <field name="name">pos.product.prop.line.form</field>
            <field name="model">pos.product.prop.line</field>
            <field name="arch" type="xml">
                <form string="Prop Note Option">
                    <sheet>
                        <group>                            
                           <field name="name"/>                                                                
                           <field name="rm_product_tmpl_id"/>
                        </group>
                         <group>                                                                                                              
                           <field name="description"/>
                           <field name="price"/>
                        </group>                                       
                    </sheet>
                </form>
            </field>
        </record>

