<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="shop_sale_form" model="ir.ui.view">
            <field name="name">sale.shop</field>
            <field name="model">sale.shop</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sale Shop">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="sale_shop_tree" model="ir.ui.view">
            <field name="name">sale.shop</field>
            <field name="model">sale.shop</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Sales Shop">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_shop_action" model="ir.actions.act_window">
            <field name="name">Shops</field>
            <field name="res_model">sale.shop</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem  id="menu_sale_shop_action"
                   name="Shops Ecommerce"
                   parent="menu_retail"
                   action="sale_shop_action"/>

    </data>
</odoo>